import sto4 from "../assets/images/sto4.jpg";
import sto5 from "../assets/images/sto5.jpg";
import sto6 from "../assets/images/sto6.jpg";
import sto7 from "../assets/images/sto7.jpg";
import sto8 from "../assets/images/sto8.jpg";
