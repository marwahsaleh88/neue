---
import "../css/style.css";
import "../css/font.css";
import "../css/animation.css";
import "../css/fontawesome/css/all.min.css";
import MainLayout from "../layouts/MainLayout.astro";
const title: string = "Default Title";
// import imges
import work1 from "../assets/images/work1.jpg";
import work2 from "../assets/images/work2.jpg";
import work3 from "../assets/images/work3.jpg";
import work4 from "../assets/images/work4.jpg";
import sony from "../assets/images/sony.jpg";
import canon from "../assets/images/canon.jpg";
import nikon from "../assets/images/nikon.jpg";
import image11 from "../assets/images/image11.webp";
import image12 from "../assets/images/image12.webp";
import image13 from "../assets/images/image13.webp";
---

<MainLayout>
  <main>
    <!-- slideshow _intro _______________________________________________________________________ -->
    <div
      class="slideshow flex flex-col text-center items-end lg:items-center justify-center border w-full border-yellow-400"
    >
      <div class="info w-full max-w-screen-lg px-4 md:px-8">
        <h1
          class="text-xl bold md:text-3xl lg:text-5xl text-white bg-white bg-opacity-20 p-2 rounded-md mb-2 sm:mb-3"
        >
          ONLINE PHOTOGRAPHY COURSES !
        </h1>
      </div>
    </div>

    <!-- über uns _intro _______________________________________________________________________ -->
    <div
      class="uberuns
      flex flex-col items-center justify-center text-center
                border-2 border-yellow-400 mt-6  p-2 m-5 rounded-tl-3xl rounded-br-3xl "
    >
      <h2 class=" text-center text-orange-500 text-2xl md:text-5xl rounded-tr-3xl rounded-bl-3xl  bg-white bg-opacity-20 p-2">
        FocusPro Schule
      </h2>

      <h2 class="text-2xl p-4 text-yellow-200 md:text-2xl lg:text-5xl">
        Online-Fotoschule
      </h2>
      <p class="text-xl text-white md:text-2xl lg:text-4xl">
        Willkommen in unserer spezialisierten Online-Fotoschule! Wir bieten
        professionelle Fotokurse, die du bequem von überall aus absolvieren
        kannst. Unsere Online-Kurse decken verschiedene Bereiche der Fotografie
        ab, von den Grundlagen bis zu fortgeschrittenen Techniken.
      </p>
      <p class="text-justify text-xl text-white md:text-2xl lg:text-4xl">
        Zusätzlich zu den Online-Kursen hast du die Möglichkeit, an exklusiven
        Workshops teilzunehmen, in denen du praktische Erfahrungen sammeln
        kannst. Unsere Experten begleiten dich auf deinem Weg, dein
        fotografisches Können auf das nächste Level zu bringen.
      </p>
      <p class="text-justify text-xl text-white md:text-2xl lg:text-4xl">
        Egal, ob du Anfänger oder fortgeschrittener Fotograf bist – unsere Kurse
        sind auf deine individuellen Bedürfnisse abgestimmt. Starte jetzt deine
        Reise in die Welt der Fotografie!
      </p>
    </div>
    <!-- serchbar _intro _______________________________________________________________________ -->

    <div
      class="search-bar flex items-center bg-yellow-100 rounded-lg shadow-md p-2 mb-10 mt-20 w-full max-w-md mx-auto"
    >
      <label for="search" class="text-orange-600">
        <i class="fas fa-search text-orange-600"></i>
      </label>
      <input
        type="text"
        placeholder="Entdecke neue Fotografie-Kurse"
        class="w-full p-2 pl-3 bg-transparent border-none outline-none text-gray-700 placeholder-orange-900 appearance-none"
      />
    </div>

    <!-- produkte _intro _______________________________________________________________________ -->
    <section class="kamera p-2 mt-1 px-4">
      <div class="container mx-auto grid grid-cols-1 gap-8 px-4">
        <h2
          class="  jump  text-orange-400 text-3xl font-bold text-center mb-9 underline underline-offset-9 decoration-red-500"
        >
           Kamera Angebote
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Kamera 1 -->
          <div
            class="flex flex-col items-center bg-gray-400 p-6 shadow-md w-full rounded-tl-3xl rounded-br-3xl"
          >
            <img
              src={canon.src}
              alt="kamera"
              class="w-24 h-24 rounded-full object-cover"
            />
            <h3 class="text-xl font-semibold mt-4">📢 Canon EOS R5</h3>
            <p class="text-black text-center">
              Professionelle Kamera mit 45 MP Auflösung und 8K-Video.
            </p>
            <button
              class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-bl-3xl rounded-tr-3xl"
            >
              in den Warenkorb
            </button>
          </div>

          <!-- Kamera 2 -->
          <div
            class="flex flex-col items-center bg-gray-400 p-6 shadow-md w-full rounded-tl-3xl rounded-br-3xl"
          >
            <img
              src={sony.src}
              alt="kamera 2"
              class="w-24 h-24 rounded-full object-cover mb-10"
            />
            <h3 class="text-xl font-semibold mt-16">📢 Sony A7 IV</h3>
            <p class="text-black text-center">
              Vollformatsensor mit 33 MP und 4K-Videoaufnahme.
            </p>

            <button
              class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-bl-3xl rounded-tr-3xl"
            >
              in den Warenkorb
            </button>
          </div>

          <!-- Kamera 3 -->
          <div
            class="flex flex-col items-center bg-gray-400 p-6 shadow-md w-full rounded-tl-3xl rounded-br-3xl"
          >
            <img
              src={nikon.src}
              alt="kamera 3"
              class="w-24 h-24 rounded-full object-cover"
            />
            <h3 class="text-xl font-semibold mt-4">📢 NIKON Z9</h3>
            <p class="text-black text-center">
              Nikons beste professionelle Kamera mit 45,7 MP.
            </p>

            <button
              class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-bl-3xl rounded-tr-3xl"
            >
              in den Warenkorb
            </button>
          </div>
        </div>
      </div>

      <ul
        class="text-l md:text-2xl mt-10 text-black text-left md:text-center space-y-2"
      >
        <li>✔️ Einschließlich . 2 Jahre Garantie</li>
        <li>✔️ 30 Tage Rückgaberecht</li>
        <li>✔️ 24/7 Kundenservice</li>
      </ul>
    </section>

    <!-- workshops _intro _______________________________________________________________________ -->

    <div class="vater p-4 rounded-md">
      <div
        class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 bg-black bg-opacity-50 p-9"
      >
        <div
        class="flex flex-col items-center text-center w-full min-w-full bg-yellow-400 bg-opacity-30 rounded-bl-3xl rounded-tr-3xl p-10 hover:bg-opacity-50"
        >
          <img
            src={work1.src}
            alt="bild1"
            class="hover-zoom w-full object-cover rounded-md"
          />

          <h3 class="text-xl mt-2 text-white text-center">📌Workshop</h3>
          <p class="    text-base  text-justify">🔹Kreative Bildkomposition</p>
          <p class="text-base leading-relaxed text-white px-4 md:text-lg md:px-10">        
                🔹 Lerne die Grundlagen der Bildkomposition, um deine Fotos auf das
            nächste Level zu bringen. Entdecke, wie du Linien, Farben und
            Perspektiven gezielt einsetzen kannst.
          </p>
          <button
            class="bg-yellow-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-tl-3xl rounded-br-3xl"
          >
            Mehr Infos
          </button>
        </div>
        <div
          class="flex flex-col items-center text-center w-full min-w-full bg-yellow-400 bg-opacity-30 rounded-bl-3xl rounded-tr-3xl p-10 hover:bg-opacity-50"
        >
          <img
            src={work2.src}
            alt="bild2"
            class="hover-zoom w-full object-cover rounded-md "
          />
          <h3 class="text-xl mt-2 text-white text-center">📌Workshop</h3>
          <p class="    text-base  text-justify">🔹Licht und Schatten</p>
          <p class="text-base leading-relaxed text-white px-4 md:text-lg md:px-10">
            Erfahre, wie du mit Licht und Schatten spielst, um dramatische und
            ausdrucksstarke Bilder zu erstellen. Perfekt für Porträt- und
            Landschaftsfotografie.
          </p>
          <button
            class="bg-yellow-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-tl-3xl rounded-br-3xl"
          >
            Mehr Infos
          </button>
        </div>

        <div
          class="flex flex-col items-center text-center w-full min-w-full bg-yellow-400 bg-opacity-30 rounded-bl-3xl rounded-tr-3xl p-10 hover:bg-opacity-50"
        >
          <img
            src={work3.src}
            alt="bild3"
            class="hover-zoom w-full object-cover rounded-md"
          />
          <h3 class="text-xl mt-2 text-white text-center">📌Workshop</h3>
          <p class="    text-base  text-justify">🔹Kreative Bildkomposition</p>
          <p class="text-base leading-relaxed text-white px-4 md:text-lg md:px-10">
            Nutze dein Smartphone wie ein Profi! Entdecke Apps, Techniken und
            Tipps, um beeindruckende Bilder direkt mit deinem Handy aufzunehmen.
          </p>
          <button
            class="bg-yellow-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-tl-3xl rounded-br-3xl"
          >
            Mehr Infos
          </button>
        </div>

        <div
          class="flex flex-col items-center text-center w-full min-w-full bg-yellow-400 bg-opacity-30 rounded-bl-3xl rounded-tr-3xl p-10 hover:bg-opacity-50"
        >
          <img
            src={work4.src}
            alt="bild4"
            class="hover-zoom w-full object-cover rounded-md"
          />
          <h3 class="text-xl mt-2 text-white text-center">📌Workshop</h3>
          <p class="    text-base  ">🔹 Portraitfotografie mit natürlichem Licht</p>
          <p class="text-base leading-relaxed text-white px-4 md:text-lg md:px-10">
            Lerne, wie du beeindruckende Portraits mit natürlichem Licht
            aufnimmst. Perfekt für Fotografen, die ohne Studioausrüstung
            arbeiten möchten
          </p>
          <button
            class="bg-yellow-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 rounded-tl-3xl rounded-br-3xl"
          >
            Mehr Infos
          </button>
        </div>
      </div>
      <hr class="border-2 border-black" />
    </div>
    <hr class="border-1 border-black" />

    <!-- team  _____________________________________________________________--->

    <section class="team-section py-2 text-center px-4">
      <div class="container mx-auto px-4">
        <h2 class="text-xl md:text-4xl font-bold text-yellow-100 mb-10    border-2 border-yellow-400   rounded-tl-3xl rounded-br-3xl  bg-black bg-opacity-65 p-2">
          Unser Team
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 ">
          <!-- Mitglied 1 -->
          <div
            class="flex flex-col items-center p-6 w-full "
          >
            <div class="w-full h-full overflow-hidden ">
              <img
                src={image11.src}
                alt="Teammitglied 1"
                class="w-full h-full object-cover hover-zoom"
              />
            </div>
            <h3 class="text-2xl font-semibold mt-4 text-gray-200">
              Herr Müller
            </h3>
            <p class="text-white text-xl">Fotograf & Trainer</p>
          </div>

          <!-- Mitglied 2 -->
          <div
            class="flex flex-col items-center p-6  w-full rounded-tl-3xl rounded-br-3xl"
          >
            <div class="w-full h-full overflow-hidden">
              <img
                src={image12.src}
                alt="Teammitglied 2"
                class="w-full h-full object-cover hover-zoom"
              />
            </div>
            <h3 class="text-2xl font-semibold mt-4 text-gray-200">
              Herr Schmidt
            </h3>
            <p class="text-white text-xl">Porträtfotografin</p>
          </div>

          <!-- Mitglied 3 -->
          <div
            class="flex flex-col items-center p-6  w-full rounded-tl-3xl rounded-br-3xl"
          >
            <div class="w-full h-full overflow-hidden">
              <img
                src={image13.src}
                alt="Teammitglied 3"
                class="w-full h-full object-cover hover-zoom"
              />
            </div>
            <h3 class="text-2xl font-semibold mt-4 text-gray-200">
              Freu Bauer
            </h3>
            <p class="text-white text-xl">Landschaftsfotograf</p>
          </div>
        </div>
      </div>
    </section>
    <a href="#" class="bg-yellow-300 opacity-50 text-black text-2xl text-center p-5  sticky bottom-0 left-1/2 transform-translat-x-1/2  rounded-tr-3xl rounded-bl-3xl hover:bg-green-500 transition duration-300 "> up </a>

    <hr class="border-2 border-orange-600" />

    <!--        --------------      -->
<input type="checkbox" id="accept-cookies" class="hidden peer absolute">

<!--  ______________________-->
<div class="cookie-banner fixed bottom-9 left-1/2 transform -translate-x-1/2 bg-gray-600  text-yellow-300 p-9 rounded-tr-3xl rounded-bl-3xl shadow-lg w-[90%] max-w-md flex flex-col md:flex-row justify-between items-center z-[10000] transition-all duration-500 peer-checked:opacity-0 peer-checked:translate-y-5 peer-checked:pointer-events-none">
  <p class="text-sm md:text-base">Diese Website verwendet Cookies, um Ihnen das beste Erlebnis zu bieten. <i class="fas fa-cookie-bite  text-3xl text-amber-600" ></i></p>
  
  <!-- aus :............................................................................-->
  <label for="accept-cookies" class="mt-2 md:mt-0 bg-yellow-500 text-black px-4 py-2 rounded-tr-3xl rounded-bl-3xl hover:bg-yellow-600 transition cursor-pointer">
    Akzeptieren
  </label>
</div>

  </main>

  <style>
    :root {
      --menu-bg: #d4eb0698;
      --menu-text: black;
    }

    body {
      background: linear-gradient(180deg, #000000, #1c1c1c, #3a2a10, #bb9051);
      color: white;
    }

    img {
      width: 90%;
      height: auto;
      object-fit: cover;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(213, 197, 165, 0.5);
      max-width: 300px;
      margin: 0 auto;
    }
    .team-section {
      background: linear-gradient(180deg, #ffd900b4, #444444, #111111);
    }

    .team-member {
      background: linear-gradient(150deg, #5a3e1a, #bb9051, #443e0b);

      box-shadow: 0 0 10px #ecd8afc2;
    }
.vater {
      background: linear-gradient(180deg, #1c1c1c, #3a2a10, #b67f12);
    }
    .uberuns {
      background: linear-gradient(180deg, #5a4500be, #1c1c1c, #000000);
    }
    .kamera {
      background: linear-gradient(180deg, #1c1c1c, #3a2a10, #b67f12);
    }

    #accept-cookies:checked ~ .cookie-banner {
  opacity: 0;
  transform: translateY(20px);
  pointer-events: none;
}


  </style>
</MainLayout>
