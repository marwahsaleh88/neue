<style>
  .kurs {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    background-color: #f0f0f0;
  }

  h2 {
    text-align: center; /* توسيط العنوان */
    margin-bottom: 2rem; /* تباعد بين العناصر */
    grid-columns: 1 / -1; /* يمتد العنوان على طول الشبكة */
    color: #000;
    font-size: 2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 1rem;
  }

  .sidebar {
    display: none;
    background: none;
  }

  @media screen and (min-width: 768px) {
    .kurs {
      grid-template-columns: 3fr 1fr;
      grid-template-rows: auto;
      gap: 1rem;
    }
    .kurs > .card {
      grid-column: auto;
      grid-row: auto;
    }

    .sidebar {
      display: flex;
      flex-direction: column;
      grid-column: 3 / 4;
      grid-row: 2 / 4;

      padding: 1rem;
      border-radius: 1rem;
      box-shadow: -5px -5px 30px 10px rgba(7, 125, 236, 0.5);
      width: 30rem;

      margin-top: 5rem;
      background-image: url("../assets/images/pic6.jpg");
      background-size: contain;
      background-position: right;
      background-repeat: no-repeat;
      background-attachment: fixed;
      color: aliceblue;
    }
    .sidebar h3 {
      font-size: 2rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 1rem;
    }
  }
</style>
