---
import "../css/style.css";
import "../css/font.css";
import "../css/animation.css";
import "../css/fontawesome/css/all.min.css";
import MainLayout from "../layouts/MainLayout.astro";
const title: string = "Default Title";
---

<MainLayout> 
  
  <main class="checkout-container flex flex-col items-center justify-center">
  <!-- Form -->
  <form
    action="/confirm"
    method="post"
    class="form-container w-[100%] text-yellow-100 text-2xl  mt-36 mb-9     rounded-tl-3xl rounded-br-3xl shadow-xl border-4 border-yellow-600 p-9
   "
  >
    <!-- Kundendaten -->
    <section>
      <h2 class="text-5xl font-semibold mb-4 text-center">Kundendaten</h2>
      <div class="space-y-4">
        <label for="name" class="block text-3xl">Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="input-field"
          placeholder="Name"
        />

        <label for="email" class="block text-3xl">E-Mail:</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="input-field"
          placeholder="E-Mail"
        />

        <label for="phone" class="block text-3xl">Telefon:</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          required
          class="input-field"
          placeholder="Telefon"
        />
      </div>
    </section>

 <!-- Adresse -->
<section>
  
  <div class="space-y-4">
    <label for="country" class="block text-3xl">Land:</label>
    <input
      type="text"
      id="country"
      name="country"
      required
      class="input-field"
      placeholder="Land"
    />

    <label for="city" class="block text-3xl">Stadt:</label>
    <input
      type="text"
      id="city"
      name="city"
      required
      class="input-field"
      placeholder="Stadt"
    />

    <label for="zipcode" class="block text-3xl">Postleitzahl:</label>
    <input
      type="text"
      id="zipcode"
      name="zipcode"
      required
      class="input-field"
      placeholder="Postleitzahl"
    />

    <label for="street" class="block text-3xl">Strassenadresse:</label>
    <input
      type="text"
      id="street"
      name="street"
      required
      class="input-field"
      placeholder="Strassenadresse"
    />
  </div>
</section>

    <!-- Zahlungsmethoden -->
    <section>
      <h2 class="text-3xl font-semibold mb-4 text-center">Zahlungsmethoden</h2>
      <div class="space-y-3">
        <label class="flex items-center space-x-2">
          <input
            type="radio"
            name="payment"
            value="paypal"
            required
            class="w-6 h-6"
          />
          <span> PayPal</span>
        </label>
        <label class="flex items-center space-x-2">
          <input
            type="radio"
            name="payment"
            value="credit_card"
            required
            class="w-6 h-6"
          />
          <span> Kreditkarte</span>
        </label>
        <label class="flex items-center space-x-2">
          <input
            type="radio"
            name="payment"
            value="bank_transfer"
            required
            class="w-6 h-6"
          />
          <span> Bankueberweisung</span>
        </label>
      </div>
    </section>

    <!-- Button -->
    <button type="submit" class="button  rounded-tl-3xl rounded-br-3xl "> Kauf abschliessen </button>
   
    
</form>
</main>

</MainLayout>
<hr class="text-orange-700">



  <style>

main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

footer {
  width: 100%;
  margin-top: auto;
}
    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(100deg, #000000, #534701);
    }

    .checkout-container {
      width: 100%;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      margin-top: 2rem;
    }

    .form-container {
      background-image: url("../assets/images/pic11.jpg");
      background-size: cover;
      background-position: center;
     

    }

    .input-field {
      width: 100%;
      padding: 0.75rem;
      border: 3px solid #1612f3ad;
      border-radius: 8px;
      font-size: 1.5rem;
      color: #22223b;
      transition: all 0.3s ease;
    }

    .input-field:focus {
      outline: none;
      border-color: #f01808;
      box-shadow: 0 0 10px rgba(240, 24, 8, 0.7);
    }

    .input-field::placeholder {
      color: #04123a;
    }

    .button {
      width: 100%;
      padding: 0.75rem;
      background: linear-gradient(to right, #e0e409, #be5905);
      color: white;
      font-size: 1.6rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .button:hover {
      background: linear-gradient(to right, #3ad809, #34c759);
      transform: scale(1.05);
    }

    .button:focus {
      outline: none;
    }
    @media screen and (min-width: 768px) {
      .checkout-container {
        flex-direction: row;
        justify-content: center;
      }

      .form-container {
        max-width: 600px;
        padding: 2rem;
      }

      .input-field {
        font-size: 1.3rem;
        padding: 1rem;
      }

      .button {
        font-size: 1.8rem;
      }
    }
  </style>

