---
import MainLayout from "../layouts/MainLayout.astro";
import "../css/style.css";

---

<MainLayout> 
<main class="checkout-container  p-6">

  <!-- Form -->
  <form action="/confirm" method="post" class="form-container space-y-6  text-white text-2xl">
    <!-- Kundendaten -->
    <section>
        
      <h2 class="text-5xl font-semibold mb-4 " >Kundendaten</h2>
      <div class="space-y-4">
        <label for="name" class="block text-3xl"> Name:</label>
        <input type="text" id="name" name="name" required class="input-field " placeholder="Name" /> 

        <label for="email" class="block">E-Mail:</label>
        <input type="email" id="email" name="email" required class="input-field " placeholder="E-Mail" />

        <label for="phone" class="block">Telefon:</label>
        <input type="tel" id="phone" name="phone" required class="input-field" placeholder="Telefon" />
    
    </section>

    <!-- Adresse -->
    <section>
      <h2 class="text-xl font-semibold mb-4">Adresse</h2>
      <div class="space-y-4">
        <label for="city" class="block">Stadt:</label>
        <input type="text" id="city" name="city" required class="input-field" placeholder="Stadt" />

        <label for="zipcode" class="block">Postleitzahl:</label>
        <input type="text" id="zipcode" name="zipcode" required class="input-field"     placeholder="Postleitzahl" />

        <label for="street" class="block">Straßenadresse:</label>
        <input type="text" id="street" name="street" required class="input-field"   placeholder="Straßenadresse" />
      </div>
    </section>

    <!-- Zahlungsmethoden -->
    <section>
      <h2 class="text-2xl font-semibold mb-4">Zahlungsmethoden</h2>
      <div class="space-y-2">
        <label class="block">
          <input type="radio" name="payment" value="paypal" required  > PayPal
        </label>
        <label class="block">
          <input type="radio" name="payment" value="credit_card" required> Kreditkarte
        </label>
        <label class="block">
          <input type="radio" name="payment" value="bank_transfer" required> Banküberweisung
        </label>
      </div>
    </section>


    <!-- Button -->
    <button type="submit" class="button">
      Kauf abschließen
    </button>
  </form>
</main>
</MainLayout>
<style>
    
  .checkout-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .form-container {
    width: 100%;
    max-width: 500px;
   
    background-image: url("../assets/images/pic11.jpg");
    background-size: cover;
    background-position: center;
    border: gold 2px solid;
    border-radius: 15px;
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 5px 5px 10px rgba(229, 233, 0, 0.664);
    box-shadow: -5px -5px 10px rgba(229, 233, 0, 0.664);
    margin-right: 2rem;

  }



  .input-field {

    width: 100%;
    padding: 0.5rem;
    border: 3px solid #e4f312;
    border-radius: 4px;
    font-size: 1rem;
    color: #22223b;
    font-size: 2rem;
  }
  .input-field:focus {
    outline: none;
    border-color: #f01808;
  }
  .input-field::placeholder {
    color: #1518c5;
  }
  

  .button {
    width: 100%;
    padding: 0.75rem;
    background: #e48509;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 1.2rem;
    cursor: pointer;
   
  }

  .button:hover {
    background: #3ad809;
  }

  /* استعلامات الوسائط (للشاشات الأكبر) */
  @media screen and (min-width: 768px) {
    .checkout-container {
      flex-direction: row;
      justify-content: center;
    }

    .form-container {
      max-width: 600px;
      padding: 2rem;
    }

    .input-field {
      font-size: 1.1rem;
      padding: 0.75rem;
    }

    .button {
      font-size: 1.4rem;
    }
  }
</style>
