---
//card.astro

const {
  img,
  title,
  description,
  price,
  duration,
  button = "Buchen",
  data = "2025-02-20",
} = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={img} alt={title} />
  </div>
  <div class="card-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <p>{duration}</p>
    <p>Preis: {price}</p>
    <p>{data}</p>
    <button onclick="window.location.href='/checkout';">{button}</button>
  </div>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }
  .card {
    width: 100%;
    background-color: #d6d3125e;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(6, 178, 190, 0.87);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .card-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    border-radius: 10px;
    border: 1px solid #000;
    box-shadow: 0 0 10px rgba(6, 178, 190, 0.87);
  }
  .card-content {
    display: flex;
    flex-direction: column;
    justify-self: center;
    align-items: left;
    gap: 1rem;
  }
  .card-content h3 {
    font-size: 2rem;
    font-weight: bold;
    font-weight: 600;
    color: #ddcac2;
    width: 100%;
    background-color: rgba(20, 18, 11, 0.384);
    border-radius: 15px;
    padding: 1rem;

    
  }
  .card-content p {
    font-size: 1rem;
    color: #ddcac2;
    width: 100%;
    background-color: rgba(20, 18, 11, 0.384);
    border-radius: 15px;
    padding: 1rem;
  }




  button {
    width: 30%;
    height: 3rem;
    font-size: 1.5rem;
    padding: 0.5rem 1rem;
    background-color: #dfb016;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  button:hover {
    background-color: #f7d2c4;
    color: #000;
  }

  @media screen and (min-width: 768px) {
    . .card {
      width: 100%;
      border-radius: 1rem;
      flex-direction: row;
      align-items: center;
    }
    .card-image {
      width: 100%;
      height: auto;
      object-fit: cover;
      display: block;
      border-radius: 10px;
      border: 1px solid #000;
      box-shadow: 0 0 10px rgba(6, 178, 190, 0.87);
    }
    .card-content {

      display: flex;
      flex-direction: column;
      justify-self: center;
      align-items: left;
      gap: 1rem;
    }
  }
  @media screen and (min-width: 1024px) {
    .card {
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: stretch;
      border-radius: 1rem;
    }

    .card-image {
      flex: 1;
      max-width: 50%;
      align-items: center;
      justify-content: center;
    }
    .card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 10px;
    }

    .card-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      gap: 1rem;
      height: 100%;
      padding: 1rem;
    }

  }
</style>
