---
//card.astro

const {
  img,
  title,
  description,
  price,
  duration,
  button = "Buchen",
  data="2025-02-20",
} = Astro.props;
---

<div class="card">
  <img src={img} alt={title} class="card-image" />
  <div class="card-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <p>{duration}</p>
    <p>Preis: {price}</p>
    <p>{data}</p>
    <button onclick="window.location.href='/checkout';">{button}</button>  


<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }

  .card {
    border: 1px solid #a60fb9c2;
    border-radius: 10px;
    padding: 1rem;
    margin-top: 5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: auto;
    width: 100%;
    background-color: #302e2b5b;
    gab: 1rem;
  }
  .card-image {
    width: 50%;
    height: auto;
    align-items: flex-start;
    padding: 1rem;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 5px 5px 10px rgba(245, 241, 3, 0.596);
    margin-left: 5rem
    ;
  }
  .card-image:hover {
    transform: scale(1.1);
  }
  .card-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }
  .card-content h3 {
    font-size: 2rem;
    margin: 0;
    padding: 0;
  }
  .card-content p {
    font-size: 1.5rem;
    background-color: rgba(19, 85, 170, 0.425);
    color: #ebd6d6;
    padding: 1rem;
    border-radius: 10px;
  }

  .card-content button {
    border-radius: 50%;
    width: 7rem;
    height: 4rem;
    background-color: #c4c248;
    align-items: center;
    color: #000;
    font-size: 1.5rem;

    padding: 0.5rem 1rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }
  .card-content button:hover {
    transform: scale(1.1);
    background-color: #e2df15;
  }
  @media screen and (min-width: 768px) {
    .card {
      grid-column: 1 / 3;
      flex-direction: row;
      gap: 1rem;
      height: auto;

      padding: 2rem;
    }
    .card-image {
      width: 30rem;
      height: auto;
      border-radius: 20px;
    }
    .card-content {
      width: 50%;
      height: 100%;
      padding: 1rem;
      border-radius: 0 10px 10px 0;
    }
  }
</style>
